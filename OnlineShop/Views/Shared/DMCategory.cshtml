@model List<Models.EF.Category>
<div class="categories">
	<ul class="p-3 mb-2 bg-danger text-white">
		<h3 style="background-color:blue;">Chăm sóc khách hàng</h3>
		@foreach (var item in Model.Where(x => x.ParentID == null))
		{
			var child = Model.Where(x => x.ParentID == item.ID);
			var parentClass = child.Count() > 0 ? "class =dropdown-toggle data-toggle=dropdown" : "";
			<li class="dropdown">
				<a class="dropdown-toggle" style="font-weight:bold;" data-toggle="dropdown" togg style="text-decoration:none" href="/tin-tuc1/@item.MetaTitle-@item.ID" @parentClass>@item.Name</a>
				@if (child.Count() > 0)
				{
					<ul class="dropdown-menu">
						@foreach (var childItem in child)
						{
							<li><a style="font-weight:bold;" href="/tin-tuc1/@childItem.MetaTitle-@childItem.ID">@childItem.Name</a></li>
						}

					</ul>
				}
			</li>

		}
	</ul>
</div>